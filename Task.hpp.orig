#ifndef TASK_H
#define TASK_H

#include <ostream>
#include <string>
using namespace std;
class Task {
   private:
   char operation = '#';//операция
   Task *operandLeft = nullptr;//левый операнд
   Task *operandRight = nullptr;//правый операнд
   int number = 0;//числовой операнд
   int prioritet();//приоритет операций
   char getOperation();//действие

public:
   // конструктор получает значение числового операнда
   Task(int number) : number(number) {};
   // конструктор получает указатели на следующие примеры и символ текущей операции
   Task(
      Task *operandLeft,
      char operation,
      Task *operandRight
   ) : operandLeft(operandLeft), operation(operation), operandRight(operandRight) {};
   ~Task();//деструктор
   void print(ostream &os);//вывод примера и расставление скобок
};

#endif