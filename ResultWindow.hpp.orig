#ifndef RESULTWINDOW_H
#define RESULTWINDOW_H

#include <ostream>
#include "graphics.h"
#include <string>
using namespace std;

class ResultWindow {
protected:
	IMAGE* background = NULL;//фоновое изображение окна
public:
	virtual ~ResultWindow() { freeimage(background); };//деструктор
	virtual void draw() = 0;//отрисовка окна
};

class SuccessWindow : public ResultWindow {//сообщение об успешной генерации
public:
	void draw();//отрисовка окна
};

class ErrorWindow : public ResultWindow {//сообщение об ошибке
public:
	void draw();//отрисовка окна
};

#endif